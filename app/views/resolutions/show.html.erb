<% if @resolution.cell? or @resolution.email? %>
  <p><strong>We will remind you on:</strong></p>

  <% if @resolution.sun? %>
    <p><strong>Sunday at <%= @resolution.spam_time.strftime("%I:%M%p") %></strong></p>
  <% end %>

  <% if @resolution.mon? %>
    <p><strong>Monday at <%= @resolution.spam_time.strftime("%I:%M%p") %></strong></p>
  <% end %>

  <% if @resolution.tue? %>
    <p><strong>Tuesday at <%= @resolution.spam_time.strftime("%I:%M%p") %></strong></p>
  <% end %>

  <% if @resolution.wed? %>
    <p><strong>Wednesday at <%= @resolution.spam_time.strftime("%I:%M%p") %></strong></p>
  <% end %>

  <% if @resolution.thu? %>
    <p><strong>Thursday at <%= @resolution.spam_time.strftime("%I:%M%p") %></strong></p>
  <% end %>

  <% if @resolution.fri? %>
    <p><strong>Friday at <%= @resolution.spam_time.strftime("%I:%M%p") %></strong></p>
  <% end %>

  <% if @resolution.sat? %>
    <p><strong>Saturday at <%= @resolution.spam_time.strftime("%I:%M%p") %></strong></p>
  <% end %>
<% else %>
  <p><strong>Please choose to get reminders by email, text messages, or both!</strong></p>
<% end %>
